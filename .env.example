# Server
PORT=8080
SITE_TITLE=NudeForge

# HTTPS (optional)
# ENABLE_HTTPS=true
# SSL_KEY_PATH=
# SSL_CERT_PATH=

# ComfyUI
COMFYUI_HOST=127.0.0.1:8188

# Directories (optional, defaults to sibling folders of the project)
# INPUT_DIR=
# OUTPUT_DIR=
# UPLOAD_COPY_DIR=
# LORAS_DIR=

# Database (PostgreSQL preferred)
# DATABASE_URL=postgres://user:password@localhost:5432/mydb
# or granular PG settings
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=
# PGDATABASE=postgres
# DATABASE_SSL=false

# SQLite fallback file path (used if Postgres not configured or fails)
SQLITE_PATH=./data/app.sqlite

# Sessions
SESSION_SECRET=change_me_to_a_random_string
## Environment configuration for NudeForge

# GitHub repository for shared assets (logger, theme)
NUDESHARED_REPO=https://github.com/gabriel20xx/NudeShared.git

# Branch to pull from the shared repository
NUDESHARED_BRANCH=master

# Absolute directory (in container) where shared repo will be cloned/updated
NUDESHARED_DIR=/app/NudeShared/src

